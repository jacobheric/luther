{
  "lock": false,
  "tasks": {
    "ok": "deno fmt --check && deno lint && deno check .",

    "start": "vite",
    "build": "vite build",
    "preview": "deno serve -A _fresh/server.js",

    "openai": "deno run -A ./lib/cli/openai.ts",
    "cron": "deno run -A --unstable-cron ./lib/cron.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "fresh": "jsr:@fresh/core@^2.0.0-beta.4",
    "@/": "./",
    "@preact/signals": "npm:@preact/signals@^2",
    "@std/dotenv": "jsr:@std/dotenv",
    "@std/encoding": "jsr:@std/encoding",
    "@spotify/web-api-ts-sdk": "npm:@spotify/web-api-ts-sdk",
    "@std/http": "jsr:@std/http",
    "@std/assert": "jsr:@std/assert",
    "@supabase/ssr": "npm:@supabase/ssr",
    "@supabase/supabase-js": "npm:@supabase/supabase-js",
    "@tailwindcss/typography": "npm:@tailwindcss/typography",
    "openai": "npm:openai",
    "preact": "npm:preact@^10.24.1",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.11",
    "resend": "npm:resend",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^0.9.13",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "tabler-icons/": "https://deno.land/x/tabler_icons_tsx@0.0.5/"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  },
  "nodeModulesDir": "auto"
}
