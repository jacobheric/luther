{
  "lock": false,
  "tasks": {
    "ok": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts",
    "openai": "deno run -A ./lib/openai.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "fresh": "jsr:@fresh/core@^2.0.0-alpha.22",
    "@/": "./",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
    "@preact/signals": "npm:@preact/signals@^1.3.0",
    "@std/dotenv": "jsr:@std/dotenv",
    "@std/encoding": "jsr:@std/encoding",
    "@std/http": "jsr:@std/http",
    "openai": "npm:openai",
    "preact": "npm:preact@^10.24.1",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.11",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:/tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js",
    "tabler-icons/": "https://deno.land/x/tabler_icons_tsx@0.0.5/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "nodeModulesDir": "auto"
}
